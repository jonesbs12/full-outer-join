@section Scripts{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAch4UJR0dIo88qoDykY5IQkxMHchPW_78"></script>
    <script>
        var marker;
        function initialize() {
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 18,
                center: { lat: 35.348114, lng: -75.504373 }
            });
            marker = new google.maps.Marker({
                map: map,
                draggable: false,
                animation: google.maps.Animation.DROP,
                position: { lat: 35.348114, lng: -75.504373 }
            })
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>

