<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("(BA)", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Location" ? "active" : "")">@Html.ActionLink("Location", "Location", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "TravelInfo" ? "active" : "")">@Html.ActionLink("Travel Info", "TravelInfo", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "ThingsToDo" ? "active" : "")">@Html.ActionLink("Things To Do", "ThingsToDo", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "BranAng" ? "active" : "")">@Html.ActionLink("B + A", "BranAng", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "TheWedding" ? "active" : "")">@Html.ActionLink("The Wedding", "TheWedding", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Gifts" ? "active" : "")">@Html.ActionLink("Gifts & Registry", "Gifts", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Create" ? "active" : "")">@Html.ActionLink("RSVP", "Create", "RSVPs")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("RSVP List", "Index", "RSVPs")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <ul class="list-inline">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>|
                <li>@Html.ActionLink("Location", "Location", "Home")</li>|
                <li>@Html.ActionLink("Travel Info", "TravelInfo", "Home")</li>|
                <li>@Html.ActionLink("Things To Do", "ThingsToDo", "Home")</li>|
                <li>@Html.ActionLink("B + A", "BranAng", "Home")</li>|
                <li>@Html.ActionLink("The Wedding", "TheWedding", "Home")</li>|
                <li>@Html.ActionLink("Gifts & Registry", "Gifts", "Home")</li>|
                <li>@Html.ActionLink("RSVP", "Create", "RSVPs")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("| RSVP List", "Index", "RSVPs")</li>
                    }
                }
            </ul>

            <p class="text-right" style="font-size:x-small">&copy; @DateTime.Now.Year - Our Wedding Application - fullouterjoin.net</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
