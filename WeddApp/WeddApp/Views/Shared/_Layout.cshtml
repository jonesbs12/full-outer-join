<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Brandon &amp; Angie's Wedding Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <!-- Google Tag Manager -->
    <noscript>
        <iframe src="//www.googletagmanager.com/ns.html?id=GTM-K2HFLC"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
            '//www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-K2HFLC');</script>
    <!-- End Google Tag Manager -->
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img class="img-responsive" style="max-height:50px; margin-bottom:-15px; margin-right:15px" src="~/Content/images/hearts.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Location" ? "active" : "")">@Html.ActionLink("Location", "Location", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "TravelInfo" ? "active" : "")">@Html.ActionLink("Travel Info", "TravelInfo", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "ThingsToDo" ? "active" : "")">@Html.ActionLink("Things To Do", "ThingsToDo", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "BranAng" ? "active" : "")">@Html.ActionLink("B + A", "BranAng", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "TheWedding" ? "active" : "")">@Html.ActionLink("The Wedding", "TheWedding", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Gifts" ? "active" : "")">@Html.ActionLink("Gifts & Registry", "Gifts", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Create" ? "active" : "")">@Html.ActionLink("RSVP", "Create", "RSVPs")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("RSVP List", "Index", "RSVPs")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <ul class="list-inline">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>|
                <li>@Html.ActionLink("Location", "Location", "Home")</li>|
                <li>@Html.ActionLink("Travel Info", "TravelInfo", "Home")</li>|
                <li>@Html.ActionLink("Things To Do", "ThingsToDo", "Home")</li>|
                <li>@Html.ActionLink("B + A", "BranAng", "Home")</li>|
                <li>@Html.ActionLink("The Wedding", "TheWedding", "Home")</li>|
                <li>@Html.ActionLink("Gifts & Registry", "Gifts", "Home")</li>|
                <li>@Html.ActionLink("RSVP", "Create", "RSVPs")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("| RSVP List", "Index", "RSVPs")</li>
                    }
                }
            </ul>

            <p class="text-right" style="font-size:x-small">&copy; @DateTime.Now.Year - Brandon and Angela's Wedding Application - fullouterjoin.net</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
